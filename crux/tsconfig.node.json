{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "es2017", "esnext", "dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist-node",
        "target": "es6",
        "module": "CommonJS",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "demo", "docs"],
    "compileOnSave": false
}
